{
  "manifest_version": 3,
  "name": "TabDog Bridge",
  "version": "1.1.0",
  "description": "Connect your browser tabs to TabDog - a powerful macOS menu bar app for managing all your tabs across browsers",
  "permissions": [
    "tabs",
    "nativeMessaging",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "116"
}
