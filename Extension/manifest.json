{
  "manifest_version": 3,
  "name": "TabDoggy Bridge",
  "version": "1.1.0",
  "description": "Bridge Chrome tabs to TabDoggy macOS menu bar app",
  "permissions": [
    "tabs",
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "116"
}
